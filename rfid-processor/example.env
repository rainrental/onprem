# Firebase Configuration
FIREBASE_DATABASEURL=https://your-project.firebaseio.com

# Firebase Client Configuration (for invitation-based auth)
FIREBASE_API_KEY=your-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef123456

# Firebase Functions URL (for invitation system)
FIREBASE_FUNCTIONS_URL=https://your-project-id.cloudfunctions.net

# Application Configuration
COMPANY_ID=your-company-id
LOCATIONNAME=your-location-name
MOBILE=0

# Redis Configuration (Optional)
REDIS_MAX_QUEUE_SIZE=1000000    # Maximum events in retry queue (default: 1M)
REDIS_MAX_MEMORY_MB=2048        # Maximum Redis memory in MB (default: 2GB)
REDIS_ENABLE_PERSISTENCE=true    # Enable Redis persistence (default: true)

# Metrics Publishing Configuration (Optional)
ENABLE_PERIODIC_PUBLISHING=true  # Enable periodic metrics publishing (default: true)
HEALTH_PUBLISH_INTERVAL=60000    # Health status publish interval in ms (default: 1 min)
METRICS_PUBLISH_INTERVAL=300000  # System stats publish interval in ms (default: 5 min)
SUMMARY_PUBLISH_INTERVAL=900000  # Activity summary publish interval in ms (default: 15 min)
METRICS_RETENTION_DAYS=30        # Days to retain old metrics (default: 30)

# MQTT Configuration
MQTT_HOST=your-mqtt-broker
MQTT_PORT=1883
MQTT_ALIVE_INTERVAL=60
MQTT_TOPIC=your-mqtt-topic
MQTT_LOG_RAW=false
LOG_UNIQUE_TAGS=false

# Logging Configuration
VERBOSE=false                    # Enable verbose logging (default: false)
LOG_ENABLE_TIMESTAMP=true        # Enable timestamps in logs (default: true)
LOG_ENABLE_COLORED_OUTPUT=true  # Enable colored log output (default: true)

# RFID Configuration
RFID_FREQUENCY=915250000              # RFID frequency in Hz (default: 915.25 MHz)
RFID_TRANSMIT_POWER_CDBM=3000         # Transmit power in centi-dBm (default: 30 dBm)

# Firestore Configuration
FIRESTORE_TAG_TTL_DURATION_DAYS=30 