# Firebase Configuration
FIREBASE_DATABASEURL=https://your-project.firebaseio.com
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef123456
# Required: Firebase Functions URL for authentication
FIREBASE_FUNCTIONS_URL=https://europe-west2-your-project.cloudfunctions.net

# Application Configuration
COMPANY_ID=your-company-id
LOCATIONNAME=your-location-name
INVITATION_CODE=your-invitation-code

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password
REDIS_DB=0
REDIS_MAX_QUEUE_SIZE=1000000
REDIS_MAX_MEMORY_MB=2048
REDIS_ENABLE_PERSISTENCE=true

# MQTT Configuration
MQTT_HOST=mosquitto
MQTT_PORT=1883
MQTT_TOPIC=rfid/tags
MQTT_TOPIC_MOBILE=rfid/tags/mobile
MQTT_ALIVE_INTERVAL=60
MQTT_LOG_RAW=false
LOG_UNIQUE_TAGS=true

# Processing Configuration
ENABLE_PERIODIC_PUBLISHING=true
HEALTH_PUBLISH_INTERVAL=60000
METRICS_PUBLISH_INTERVAL=300000
SUMMARY_PUBLISH_INTERVAL=900000
METRICS_RETENTION_DAYS=30

# Firebase Gateway Configuration
FIREBASE_GATEWAY_URL=http://firebase-gateway:3000

# Update Service Configuration
GITHUB_REPO=your-org/onprem-repo
UPDATE_CHECK_INTERVAL=15

# Optional: Custom Gateway Configuration
GATEWAY_ID=firebase-gateway
VERSION=1.0.0

# Configuration Refresh (milliseconds)
CONFIG_REFRESH_INTERVAL=300000  # 5 minutes 